{
  "appId": "com.mirro2.app",
  "appName": "MirroSocial",
  "webDir": "out",
  "server": {
    "androidScheme": "https",
    "url": "https://celestial-rouge-one.vercel.app/",
    "cleartext": false
  },
  "android": {
    "buildOptions": {
      "keystorePath": "release-key.keystore",
      "keystoreAlias": "key0",
      "keystorePassword": "your_keystore_password"
    }
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 1500,
      "backgroundColor": "#FFFFFF",
      "showSpinner": false,
      "androidSpinnerStyle": "large",
      "spinnerColor": "#999999",
      "androidScaleType": "CENTER_CROP",
      "splashFullScreen": true,
      "splashImmersive": true
    },
    "App": {},
    "Device": {
      "watchSupport": true
    },
    "Haptics": {
      "watchHaptics": true
    }
  },
  "ios": {
    "scheme": "MirroSocial"
  }
}